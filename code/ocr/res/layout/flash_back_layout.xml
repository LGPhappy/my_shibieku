<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <LinearLayout
        android:id="@+id/idcard_botton_lyaout"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@color/operBarBackgroud1"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageButton
                android:id="@+id/light_on"
                android:layout_width="51dp"
                android:layout_height="51dp"
                android:layout_marginBottom="39dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/flash_on_selector"
                android:visibility="visible" />

            <TextView
                android:id="@+id/light_on_off_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/light1_string"
                android:textSize="13dip"
                android:visibility="gone" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:visibility="invisible"
            android:orientation="vertical" >

            <ImageButton
                android:id="@+id/take_pic"
                android:layout_width="69dp"
                android:layout_height="69dp"
                android:layout_marginBottom="30dp"
                android:layout_marginTop="21dp"/>

            <TextView
                android:id="@+id/take_and_confirm_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/takepic_btn_string"
                android:textSize="13dip"
                android:visibility="gone" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageButton
                android:id="@+id/backbtn"
                android:layout_width="51dp"
                android:layout_height="51dp"
                android:layout_marginBottom="39dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/back_selector" />

            <TextView
                android:id="@+id/back_and_reset_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/backbtn_string"
                android:textSize="13dip"
                android:visibility="gone" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>